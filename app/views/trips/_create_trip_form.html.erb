<body>
<%= form_with(model: trip, local: true) do |form| %>
  <% if trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="create_trip_form">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :trip_name %>
  </div>

  <div class="field">
    <%= form.label :accommodation_url %>
    <%= form.text_field :accomodation_url, id: :trip_accomodation_url %>
  </div>

  <div class="field">
    <%= form.label :start_location %>
    <%= form.text_field :start_location, id: :trip_start_location %>
  </div>

    <div class="field">
    <%= form.label :end_location %>
    <%= form.text_field :end_location, id: :trip_end_location %>
  </div>

  <div class="field">
    <%= form.label :price_per_night %>
    <%= form.number_field :price_per_night, :step => 0.01, :min => 0, id: :trip_price_per_night %>
  </div>

  <div class="field">
    <%= form.label :number_of_possible_attendees %>
    <%= form.number_field :number_of_possible_attendees, :min => 0, id: :trip_number_of_possible_attendees %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, id: :trip_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :trip_end_date %>
  </div>

  <div class="field">
    <%= form.hidden_field :total_possible_cost, :value => 0 %>
  </div>
  
  <div class="field">
    <%= form.hidden_field :total_confirmed_cost, :value => 0 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
</body>